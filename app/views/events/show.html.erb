<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h1 class="h4 mb-0"><%= @event.title %></h1>
        </div>
        <div class="card-body">
          <dl class="row">
            <dt class="col-sm-3"><%= Event.human_attribute_name(:description) %></dt>
            <dd class="col-sm-9"><%= @event.description %></dd>

            <dt class="col-sm-3"><%= Event.human_attribute_name(:start_at) %></dt>
            <dd class="col-sm-9"><%= l @event.start_at, format: :long %></dd>

            <dt class="col-sm-3"><%= Event.human_attribute_name(:end_at) %></dt>
            <dd class="col-sm-9"><%= l @event.end_at, format: :long %></dd>

            <dt class="col-sm-3"><%= Event.human_attribute_name(:location) %></dt>
            <dd class="col-sm-9"><%= @event.location %></dd>

            <dt class="col-sm-3"><%= Event.human_attribute_name(:user) %></dt>
            <dd class="col-sm-9"><%= @event.user.name %></dd>
          </dl>

          <div class="d-flex gap-2 mt-4">
            <% if @event.user == current_user %>
              <%= link_to t('common.edit'), edit_event_path(@event), class: 'btn btn-outline-primary btn-sm' %>
            <% end %>
            <%= link_to t('events.back_to_list'), events_path, class: 'btn btn-outline-secondary btn-sm' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
