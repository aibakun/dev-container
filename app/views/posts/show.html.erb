<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h1 class="h4 mb-0"><%= @post.title %></h1>
        </div>
        <div class="card-body">
          <dl class="row">
            <dt class="col-sm-3"><%= Post.human_attribute_name(:content) %></dt>
            <dd class="col-sm-9"><%= @post.content %></dd>

            <dt class="col-sm-3"><%= t('activerecord.models.user') %></dt>
            <dd class="col-sm-9"><%= @user.name %></dd>

            <dt class="col-sm-3"><%= t('activerecord.attributes.post.created_at') %></dt>
            <dd class="col-sm-9"><%= l(@post.created_at, format: :long) %></dd>

            <dt class="col-sm-3"><%= t('tags.index') %></dt>
            <dd class="col-sm-9">
              <% @post.tags.each do |tag| %>
                <%= link_to tag.name, tag_path(tag), class: 'badge bg-secondary text-decoration-none me-1' %>
              <% end %>
            </dd>
          </dl>

          <div class="d-flex gap-2 mt-4">
            <%= render 'action_links', user: @user, post: @post if current_user == @user %>
            <%= link_to t('posts.back_to_list'), user_posts_path(@user), class: 'btn btn-outline-secondary btn-sm' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
