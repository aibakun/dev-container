<div class="container py-4">
  <h1 class="mb-4"><%= @purchase_history.name %></h1>

  <div class="card">
    <div class="card-body">
      <dl class="row">
        <dt class="col-sm-3"><%= PurchaseHistory.human_attribute_name(:price) %></dt>
        <dd class="col-sm-9"><%= @purchase_history.price %></dd>

        <dt class="col-sm-3"><%= PurchaseHistory.human_attribute_name(:purchase_date) %></dt>
        <dd class="col-sm-9"><%= l @purchase_history.purchase_date, format: :long %></dd>

        <dt class="col-sm-3"><%= PurchaseHistory.human_attribute_name(:user) %></dt>
        <dd class="col-sm-9"><%= @purchase_history.user.name %></dd>
      </dl>
    </div>
  </div>

  <div class="mt-3">
    <% if @purchase_history.user == current_user %>
      <%= link_to t('common.edit'), edit_purchase_history_path(@purchase_history), class: 'btn btn-outline-primary me-2' %>
    <% end %>
    <%= link_to t('purchase_histories.back_to_list'), purchase_histories_path, class: 'btn btn-outline-secondary' %>
  </div>
</div>
